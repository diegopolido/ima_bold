
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.product.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :price, t("activerecord.attributes.product.price", :default => "Price"), :class => :label %>
    <%= f.text_field :price, :class => 'text_field money' %>
    <span class="description">Ex: 200.00</span>
  </div>

  <div class="group">
    <%= f.label :active, t("activerecord.attributes.product.active", :default => "Active"), :class => :label %>
    <%= f.check_box :active, :class => 'check_box' %>
  </div>

  <div id="category-combo-div" class="group">
    <%= f.label :category_id %><br>

    <%= select_tag "product[category_id]", options_for_select(@categories.collect{|c| [c.name, c.id]}, @product.category_id) %>
  </div>
  <div id="new-category-div" class="group" style="display: none;">
    New Category Name: <input type="text" id="category-name" />
    <input type="button" id="save-new-category" value="Save"/>
    <input type="button" id="cancel-new-category" value="Cancel"/>

  </div>

  <%= link_to "Add Category", "javascript:showNewCategoryInput()" %>

  <br/>
  <br/>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), products_path, :class => "text_button_padding link_button" %>
</div>